  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist/"
  },
  "include": [
    "src/*"  ]
}